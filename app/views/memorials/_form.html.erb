<!-- Style in forms.scss -->
    <%= form_for(@memorial) do |f| %>
    <% if @memorial.errors.any? %>
    <ul>
      <% @memorial.errors.full_messages.each do |m| %>
        <li><%= m %></li>
      <% end %>
    </ul>
    <% end %>
         <%= f.label :first_name %>
         <%= f.text_field :first_name, class: "form-field", placeholder: "First Name" %><br>
         <%= f.label :last_name %>
         <%= f.text_field :last_name, class: "form-field", placeholder: "Last Name" %><br>
         <%= f.label :bio, "Biography" %>
         <%= f.text_area :bio, class: "form-field", placeholder: "Biography" %><br>

          <%= f.label :dob, "Date of Birth" %><br>
          <%= f.date_select :dob, options = {start_year: 1500}, class: "form-field" %><br>
          <%= f.label :dod, "Date of Passing" %><br>
          <%= f.date_select :dod, options = {start_year: 1500}, class: "form-field" %><br>

         <%= f.submit "Save Memorial", class: "form-field btn-save" %>
    <% end %>
