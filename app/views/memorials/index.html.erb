
   <% @memorials.each do |memorial| %>
      <% @post = @memorial.posts.build %>
      <% @pics = @memorial.posts.where(postable_type: "Picture").collect(&:postable) %>
      <div class="media">
        <div class="media-left">
          <a href="#">
             <%= image_tag @pics.image.first.url %>
          </a>
        </div>
        <div class="media-body">
               <h4 class="media-heading"><%= link_to "#{memorial.first_name} #{memorial.last_name}", memorial %></h4>
        </div>
      </div>
   <% end %>
