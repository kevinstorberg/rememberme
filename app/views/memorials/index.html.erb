<div class="container">
   <% @memorials.each do |memorial| %>
      <div class="media">
        <div class="media-left">
          <a href="#">
                <%= image_tag memorial.first_thumb %>
          </a>
        </div>
        <div class="media-body">
            <h4 class="media-heading"><%= link_to "#{memorial.first_name} #{memorial.last_name} | #{memorial.dob.year} - #{memorial.dod.year}", memorial %></h4>
        </div>
      </div>
   <% end %>
</div>
