<h1>Listing Memorials</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @memorials.each do |memorial| %>
      <tr>
        <td><%= memorial.first_name %></td>
        <td><%= memorial.last_name %></td>
        <td><%= link_to 'Show', memorial %></td>
      </tr>
    <% end %>
  </tbody>
</table>
