<div class="container-fluid">
    <div class="row">
      <div class="col-xs-3 col-xs-offset-2 col-sm-offset-5">
           <h1 class="display-3">Log In</h1>
           <%= form_tag sessions_path do %>
              <div class="field">
                 <%= label_tag :email %><br>
                 <%= text_field_tag :email %>
              </div>
              <div class="field">
                 <%= label_tag :password %><br>
                 <%= password_field_tag :password %>
              </div>
              <div class="actions">
                 <%= submit_tag "Log In" %>
              </div>
           <% end %>
        </div>
     </div>
 </div>
