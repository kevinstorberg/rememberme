<h1>New Memorial</h1>

<%= form_for([@user, @user.deceaseds.build]) do |f| %>
   <div class="field">
     <%= f.label :first_name %><br>
     <%= f.text_field :first_name %>
   </div>
   <div class="field">
     <%= f.label :last_name %><br>
     <%= f.text_field :last_name %>
   </div>
   <div class="actions">
     <%= f.submit %>
   </div>
<% end %>
